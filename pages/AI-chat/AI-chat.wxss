.container {
  display: flex;
  flex-direction: column;
  height: 94vh;
  padding: 5%;
}
.allcontainer {
  background-color: #e1efbb;
  background-image: url('https://wallup.net/wp-content/uploads/2016/01/277590-nature-landscape-hammocks-beach-white-sand-palm_trees-sea-blue-sky-Maldives-sunlight-tropical-summer.jpg'); /* Set the background image */
  background-size: cover; /* Ensure the image covers the whole area */
  background-repeat: no-repeat; /* Prevent the image from repeating */
  background-position: center; /* Center the background image */
  height: 100vh; /* Ensure the background covers the full height */
  display: flex;
  flex-direction: column; 
  
}
.textAIchat {
  margin-left: 25px;
  color: #FFFFFF;
}
.headerAIchat-box {
  width: auto;
  height: auto;
  background-color: #1679AB;
  border-bottom: 1px solid #cccccc;
}
.headerAIchat {
  width: 150px;
  height: auto;
  overflow-y: auto;
  margin-left: 145px;
  border-radius: 5px;
  align-items: center;
}
.messages {
  flex: 1;
  overflow-y: auto; /*so that the send message button and input stay top , NOT OVERFLOW*/
  /* background-color: #1679AB;  */
}


.message {
  margin: 5px 0;
  padding: 10px;
  border-radius: 5px;
  max-width: 100%;
  display: flex;
}

.message[data-sender="user"] {
  display: flex;
  justify-content: flex-end;/* align the user message to the right*/
  background-color: skyblue;
  border: 2px solid black;
  border-radius: 4px;
  
}

.message[data-sender="bot"] {
  background-color: #2CC4D3;
  border: 2px solid black;
  color: #FFFFFF;
  justify-content: flex-start;
}
.welcome-messageText {
  border: solid 1px white;
  background-color: black;
  border-radius: 30px;
  font-size: 17px;
  font-style: normal;
  margin-bottom: 30px;
  padding: 20px;
}
.wellmessage-text {
  margin: 0 auto;
  color: white;
  font: 14px;
  margin-bottom: 30px;
  padding: 5%;
}
.message-text {
  margin-left: 10px;
  margin-right: 10px;
  color: black;
}

.input-area {
  display: flex;
  padding: 10px;
  /* border-top: 1px solid #ccc; */
  /* background-color: #494949; */
}
.inputbox {
  color: darkblue;
  background-color: #9AF5FF;
  width: 250px;
}
input {
  flex: 1;
  padding: 10px;
  border: 3px solid black;
  border-radius: 5px;
  margin-right: 10px;
}

.sendButton {
  border: 3px solid black;
  border-radius: 4px;
  background-color: #9AF5FF;
  color: black ;
  margin: 2%;
}
.user-imageAIbox {
  width: auto;
  height: auto;
}
.image-userAI {
  width: 25px;
  height: 25px;
  border: solid 1px transparent;
}
