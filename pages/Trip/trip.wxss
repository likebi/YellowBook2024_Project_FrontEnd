.outer-box {
  height: 42vh;
  width: auto;
  background-image: url('https://img.freepik.com/premium-photo/blue-sky-with-clouds-blue-sky-with-clouds-in-manga-anime-comic-style-digital-art-style-illustration-painting_743201-5170.jpg'); 
  border-bottom: 1px solid grey;
  border-radius: 0rpx 0rpx 50rpx 50rpx ;
}
#container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 3rpx;
  margin-left: 30rpx;
  width: 90%;
}

.suggestion-header{
  width: auto;
  height: 30px;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
  color: crimson;
}

.link_sugges_header{
  display: inline-block;
}

.history_header{
  display: inline-block; 
  width: 200rpx; 
  height: 40rpx; 
  line-height: 40rpx;
  text-align: center;
  background-color: #2CC4D3; 
  margin-right: 10px;
  border-radius: 40rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}


.search-container {
  flex: 1;
  margin: 30rpx 20rpx;
}

.search-window {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  padding: 0 10rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10px;
}

.search-input {
  flex: 1;
  padding: 10rpx;
  border: none;
  color: #FFFFFF;
}

.search-button {
  cursor: pointer;
  color: #ffffff;
}

.title_box{
  margin-left: 40rpx;
  font-weight: 550;
  font-size: 35rpx;
}

.suggestion-box{
  margin-left: 40rpx;
  margin-top: 20rpx;
  height: 280rpx;
  height: auto;
}
.link_suggestion_box{
  display: inline-block;
  margin: 1%;
}

.style_box{
  position: relative;
  width: 110px; 
  height: 280rpx; 
  margin-right: 10px;
  /* background-color: crimson; */
}



.title_suggestion{
  position: absolute;
  top: 10rpx;
  left: 10px;
  font-size: 30rpx;
  padding: 5rpx 10rpx;
  color: #FFFFFF;
  border-radius: 5rpx;
}

.style_box image{
  width: 110px; height: 280rpx;
  border-radius: 20rpx;
}


.view{
  display: inline-block;
  vertical-align: top;
}

.style_box2{
  display: inline-block; 
  vertical-align: top;
}


.image-suggestion{
  width: 100px; 
  height: 120rpx; 
  border-radius: 20rpx;
  margin-top: 5px;
}
.box_second{
  position: relative;
  display: block;
  flex-direction: column;
  width: 100px; 
  height: 130rpx; 
}

.box_third{
  position: relative;
  display: block;
  flex-direction: column;
  width: 100px; 
  height: 130rpx; 
  margin-right: 10px;
  margin-top: 20rpx;
}

.suggestion_title{
  margin: 40rpx;
  font-size: 35rpx;
}

.first {
  display: flex;
  flex-direction: column;
  width: 45%;
  background-color: #E5E4E4  ;
  border: #E5E4E4 solid 1px  ;
  border-radius: 10px;
  margin-bottom: 40px;
  height: auto;
  background-color: #fff;
}

button-sug{
  display: inline-block;
}
.box-suggestion {
  display: flex; /* 使用flex布局 */
  flex-wrap: wrap; /* 允许换行 */
  justify-content: space-around; /* 在主轴上平均分配空间 */
}
.image1 {
  width: 100%;
  border-radius: 10px;
}

.intro {
  overflow: hidden; /* 超出内容隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  display: -webkit-box; /* 使用 Flexbox 进行布局 */
  -webkit-line-clamp: 2; /* 限制显示两行 */
  -webkit-box-orient: vertical; /* 垂直排列 */
  margin: 10px 20rpx;
  font-size: 30rpx;
  font: 500;
}

.item {
  display: flex;
  /* align-items: center; */
  justify-content: space-around;
  width: auto;
  height: auto;
}
.comment-image-box {
  width: auto;
  height: auto;
  /* border: crimson solid 1px; */
  align-items: center;
  justify-content: center;
  margin: 1%;
}
.comment-like-box {
  width: auto;
  height: auto;
  margin-right: 2%;
  /* border: black 1px solid; */
}
.comment-textcomment-box {
  width: auto;
  height: auto;
  /* border: blue solid 1px; */
  margin: 2%;
  margin-bottom: 10%;
}
.item-image {
  width: 25px; /* 设置图片的宽度 */
  height: 25px; /* 设置图片的高度 */
  border-radius: 40rpx;
  margin: 2%;
}

.item-love{
  width: 25px; /* 设置图片的宽度 */
  height: 25px; /* 设置图片的高度 */
  border-radius: 40rpx;
  margin: 2%;
}

.item-text {
  overflow: hidden; /* 超出内容隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  display: -webkit-box; /* 使用 Flexbox 进行布局 */
  -webkit-line-clamp: 2; /* 限制显示两行 */
  -webkit-box-orient: vertical; /* 垂直排列 */
  font-size: 22rpx; /* 设置文字的大小 */
  color: #333; /* 设置文字的颜色 */
}
