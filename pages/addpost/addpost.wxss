/* pages/addpost/addpost.wxss */
.container1 {
  padding: 0;
  margin: 0;
  width: 90vw;
  margin: 0 30rpx;
}

.upload-box {
  margin-top: 15px;
  margin-left: 20rp;
  width: 100%;
  padding-bottom: 50rpx;
}

.uploaded-image-container {
  position: relative;
  display: inline-block;
  margin-right: 5px;
}

.uploaded-image {
  width: 100px;
  height: 100px;
  margin-left: 20rpx;
}

.delete-btn {
  position: absolute;
  top: 40rpx;
  right: 0;
  width: 20px;
  height: 20px;
}

.header {
  width: 100%;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.arrow {
  font-size: 40rpx;
  margin-bottom: 50rpx;
  margin-left: 2%;
}
.arrowr2 {
  font-size: 50rpx;
  color: #999;
  margin-right: 10px;
  padding: 10px;
}
.arrowr {
  font-size: 50rpx;
  color: #999;
}

.upload-icon {
  font-size: 6rem;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background-color: rgba(200, 200, 200, 0.3);
  margin-left: 3%;
  width: 5%;
  height: 30rpx;
  padding: 80rpx;
}

#file {
  position: absolute;
  top: 0;
  margin-left: 3%;
  width: 30%;
}

.input-text {
  width: 100%;
  height: auto;
}

.title {
  width: 100%;
  padding-left: 4%;
  border-bottom: solid 1px rgba(200, 200, 200, 0.6);
  padding-bottom: 30rpx;
  font-size: 16px;
}

.content {
  margin-top: 20rpx;
  padding-left: 4%;
  width: 100%;
  height: 250rpx;
  font-size: 14px;
  border-bottom: 1px solid rgba(200, 200, 200, 0.6);
}

.post-element {
  width: 100%;
  height: auto;
  padding: 1%;
  border-bottom: 1px solid rgba(200, 200, 200, 0.6);
  display: flex;
  align-items: center;
}

.add-postElement {
  margin-top: 10px;
  height: 320px;
  background-color: #f0f0f0;
  padding: 10px;
  border-radius: 5px;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}
#textarea {
  display: block;
  width: 100%;
  height: 300px;
  padding: 8px;
  margin-top: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.post-element-button {
  border: none;
  padding: 4%;
  background-color: #FFFFFF;
}
.suggestion-header {
  width: auto;
  margin-bottom: 40rpx;
}
.history_header {
  display: inline-block; /*ensures that the content display inline in one line*/
  margin-top: 10px;
  width: auto; 
  height: 40rpx; 
  line-height: 40rpx;
  text-align: center;
  background-color: #ABABAB; 
  padding: 7px;
  margin-right: 5px;
  border-radius: 40rpx;
  font-size: 25rpx;
  color: #FFFFFF;
}
.link_sugges_header{
  display: inline-block;
}
.htag {
  height: 50rpx;
  width: 50rpx;
  margin-right: 10rpx;
}

.location {
  margin-top: 30px;
  width: 100%;
  padding: 1%;
  border-bottom: 1px solid rgba(200, 200, 200, 0.6);
  display: flex;
  align-items: center;
}
.dropdownMenuHeader {
  width: 100%;
  margin-top: 10px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
  z-index: 1000; /* Ensure it is on top */
}
.dropdown-item-header {
  padding: 10px;
  cursor: pointer;
}
.dropdown-item-header:hover {
  background-color: #f0f0f0;
}

.add-postElement {
  margin-top: 20px; /* Adjust as needed */
}
.dropdown-menu {
  position: absolute; /* 绝对定位 */
  top: 40px; /* 根据需要调整位置 */
  right:6px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
  z-index: 1000; /* 确保在最上层 */
}
.dropdown-item-header {
  text-align: center;
  width: 97%;
  height: auto;
  padding: 5px;
  cursor: pointer;
  border-bottom: 1px solid #ccc;
}
.dropdown-item {
  text-align: center;
  width: 100%;
  height: auto;
  padding: 5px;
  cursor: pointer;
  border-bottom: 1px solid #ccc;
}
.arrow3 {
  margin-right: 22px;
  display: block;
}

.post-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500rpx;
}

.post-btn {
  border-radius: 20px;
  color: #fff;
  font-size: 15px;
  background-color: #f02f2fef;
}
