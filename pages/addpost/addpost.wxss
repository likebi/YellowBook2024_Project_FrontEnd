/* pages/addpost/addpost.wxss */
.container1 {
  display: flex;
  flex-wrap: wrap;
  padding: 0;
  height: 100vh;
  width: 100vw;
  align-items: flex-start;
  border: black 1px solid;
}
.upload-box {
  width: 100%;
  height: auto;
  padding-bottom: 50rpx;
}
.header {
  width: 100%;
  height: 25px;
  margin-bottom: 10px;
}
.arrow {
  width: 10px;
  height: 10px;
  font-size: 50rpx;
  margin-bottom: 50rpx;
  margin-left: 2%;
}
.upload-icon {
  position: relative;
  font-size: 6rem;
  display: flex;
  border-radius: 10rpx;
  border: 1px solid black;
  margin-left: 3%;
  width: 10%;
  height: 100rpx;
  padding: 80rpx;
}
#file {
  display: flex;
  position: absolute;
  top: 0;
  margin-left: 3%;
  width: 30%;
}
.input-text{
  display: flex;
  margin-top: 20rpx;
  width: 100%;
}
.title {
  width: 100%;
  padding-left: 3%;
  border-bottom: solid 1px black;
  padding-bottom: 10rpx;
  font-size: 16px;
}
.content {
  margin-top: 10rpx;
  padding-left: 1%;
  width: 100%;
  height: 30%;
  overflow: hidden;
  font-size: 14px;
}

