<view class="comment-post">
  <view class="comment-container">
    <view class="comments-section">
      <block wx:for="{{comments}}" wx:key="id">
        <view class="comment">
          <image class="user-image-comment" src="{{item.userImage}}" />
          <view class="comment-content">
            <text class="user-name-comment">{{item.userName}}</text>
            <text class="comment-text">{{item.comment}}</text>
            <view class="like-section" data-id="{{item.id}}" bindtap="toggleLike">
              <image src="{{heart}}" class="like-icon" src="{{heart}}"/>
              <text>{{item.likes}}</text>
            </view>
            <view class="save-section" data-id="{{item.id}}" bindtap="togglesave">
              <image class="save-icon" src="{{star}}" />
              <text>{{item.saves}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
  <view class="input-section">
    <input 
    type="text" 
    bindinput="onInput" 
    bindconfirm="submitComment"
    placeholder="Write a comment..." 
    value="{{inputValue}}" />
    <button class="comment-button" bindtap="submitComment">Submit</button>
  </view>
</view>
  
