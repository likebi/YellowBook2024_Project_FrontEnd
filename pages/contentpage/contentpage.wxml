<view class="post-page">
  <view class="post-page-header">
    <view class="image_back">
      <text>{{img_left}}</text>
    </view>
    <view class="post-image">
      <image class="post-image-size" src="{{user_image}}" mode="cover" />
    </view>
    <view class="post-username-box">
      <view class="post-user">{{username}} </view>
      <view>
        <image class="location-image" src="{{location}}" mode=""/>
        <text class="post-username-font">Moscow,Russia</text>
      </view>
    </view>
    <view class= "follow-button">
      <button class="follow-button-set" size="mini" bind:tap="toggleFollow">
        {{ followStatus ? '已关注' : '关注' }}
      </button>
    </view>
  </view>
</view>

<view class="swiper-post">
  <swiper 
    interval="2500"
    circular="true"
    indicator-dots="true"
    class="swipper-size">
    <swiper-item wx:for="{{imgurl}}" wx:key="*this">
      <view class="swiper-img">
        <image src="{{item.img}}" class="centered-image"/>
      </view>
    </swiper-item>
  </swiper>
</view>

