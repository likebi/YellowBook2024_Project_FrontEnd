.post-page {
  display: flex;
  width: 100vw;
}
.item {
  display: flex;
  align-items: center;
  margin: 10px;
}

/* 样式调整 */
.touch-area {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}


.item-image {
  width: 80rpx; 
  height: 80rpx; 
  border-radius: 50%;
  margin-right: 10px; 
  margin-left: 20rpx;
}

.item-text {
  width: 180px;
  margin-left: 3rpx;
  font-weight: 550;
  font-size: 13px; 
  color: var(--color-secondary-label);
}

.button_follow{
  display: flex;
  justify-content: center;
  margin-left: 70rpx;
  width: 80rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 10px;
  color: #fff;
  border: 1px solid ;
  background-color: #ff2e4d;
  border-radius: 25rpx;
  
}



.swiper-post {
  width: 100%; /* 设置 Swiper 容器的宽度 */
  height: 300px; 
  overflow: hidden; 
}

.swipper-size {
  width: 100%; /* 设置 Swiper 组件的宽度 */
  height: 100%; /* 设置 Swiper 组件的高度 */
}

.swiper-img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%; /* 确保图片占据整个父容器的宽度 */
  height: 100%; /* 确保图片占据整个父容器的高度 */
}

.centered-image {
  width: 100%; /* 让图片宽度填充父容器. */
  height: 100%; /* 让图片高度填充父容器 */
  object-fit: cover; /* 让图片按比例填充，并居中显示 */
}

.text-post{
  padding: 0 0;
  font-size: 40rpx;
  margin: 20px 40rpx;

}

.title_post{
  font-size: 17px;
  font-weight: 600;
}

.text_post{
  margin-top: 15px;
  font-size: 16px;
}

.position-date {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(200, 200, 200, 0.5);
  font-size: 12px;
  color: #999;
}

.collect-love-post {
  display: flex;
  align-items: center; 
  margin-left: auto;
}


.image_collum{
  width: 50rpx;
  height: 50rpx;
}
.position_content{
  padding-left: 10rpx;
}

.header_comment{
  margin-left: 40rpx;
  font-size: 12px;
  color: #666;
}

.comment-post{
  margin-top: 50rpx;
}

.leave_comment {
  border: none; 
  background: none; 
  padding: 0; 
  outline: none; 
  width: 90%; 
  height: 30px; 
  padding-left: 40rpx;
  border-radius: 5px; 
  background-color: rgba(200, 200, 200,0.3);
  border-radius: 20px;
}


.commentArea{
  display: flex;
  margin: 40rpx 30rpx;
}
.commentArea image{
  align-items: center;
  justify-content: center;
  margin-left: 15px;
  width: 60rpx;
  height: 60rpx;
}

.user_comment{
  position: relative;
  display: flex;
  margin: 10rpx 20rpx;
  height: 75px;
}

.commentuser-image{
  width: 50px; 
  height: 50px; 
  border-radius: 50%;
}

.commentuser-name{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.commentuser-text{
  margin-left: 20rpx;
  font-size: 15px;
  font-weight: 500;
}

.commentuser-position{
  margin-left: 40rpx;
  font-size: 12px;
  font-weight: 500;
  color: #999;
}

.icon_love{
  position: absolute;
  right: 5px;
  top: 6px;
  width: 60rpx;
  height: 60rpx;
  
}
.liked_count{
  position: absolute;
  bottom: 15px;
  right: 16px;
}

