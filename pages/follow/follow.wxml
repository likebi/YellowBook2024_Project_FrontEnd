<view id="container">
  <!-- 顶部按钮 -->
  <view class="header">

    <view class="follow-container">
      <view class="follow-window">
        <button class="followed {{followButtonState}}" bindtap="onFollowed">关注</button>
        <button class="fans {{fanButtonState}}" bindtap="onFans">粉丝</button>
      </view>
    </view>
  </view>

  <!-- 搜索栏 -->
  <view class="search-container">
    <view class="search-window">
      <image class="icon" src="/static/sousuo.png" />
      <input type="text" class="search-input" placeholder="输入搜索内容" bindinput="onInput" value="{{value}}" />
    </view>
    <view class="search-button" bindtap="onSearch">搜索</view>
  </view>

  <!-- 内容部分 -->
  <view class="content">
    <view class="first_collum">
      <view class="myfollow">
        我的关注（xxx人）
      </view>
      <view class="order">
        <button class="order-button" bindtap="onOrderChange">
          排序方式
          <image class="icon" src="/static/paixufangshi.png" mode="" />
        </button>
      </view>
    </view>

    <!-- 搜索结果 -->
    <view class="search-results" wx:if="{{searchResults.length > 0}}">
      <view wx:for="{{searchResults}}" wx:key="id" class="search-result-item">
        <text>{{item}}</text>
      </view>
    </view>
    
    <!-- 关注列表 -->
    <view class="followed-window" wx:for="{{followedList}}" wx:key="id">
      <image class="profile-background" src="{{item.background}}" />
      <view class="profile-details">
        <view class="profile-name">{{item.name}}</view>
        <view class="follower-number">{{item.followerNumber}}</view>
      </view>      
    </view>


  </view>
</view>
