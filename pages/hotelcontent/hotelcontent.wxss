.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
  align-items: flex-start;
  justify-content: flex-start;
  padding: 0;
  height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
}


.first_container{
  margin-top: 15px;
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.header {
  display: flex;
  justify-content: flex-start;
  margin-right: 10px;
}
.search-button {
  display: flex;
  justify-content: flex-end;
  line-height: 40px;
}


.index-position {
  display: flex;
  /* line-height: 20px; */
  align-items: center; 
  width: auto; 
}

.image-type {
  width: 20px;
  height: 20px;
  margin-right: 3px; 
}
.search-container {
  flex: 1;
  margin: 0 30rpx;
}

.search-window {
  display: flex;
  margin-top: 5px;
  align-items: center;
  top: 10px;
  height: 30px;
  list-style: 30px;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  padding: 0 30rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.search-link {
  flex: 1;
  padding: 10rpx 25rpx;
  color: #666;
  font-size: 14px;
  text-decoration: none;
  line-height: 30rpx;
}

.dropdown-container {
  display: flex;
  margin-top: 4px;
  padding-right: 10px;
  align-items: center;
}

.dropdown-menu {
  position: absolute; /* 绝对定位 */
  top: 40px; /* 根据需要调整位置 */
  right:6px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
  z-index: 1000; /* 确保在最上层 */
}

.dropdown-img{
  width: 26px;
  height: 26px;
}

.dropdown-item {
  width: 100%;
  padding: 10px;
  cursor: pointer;
}

.dropdown-item:hover {
  background-color: #f0f0f0;
}


.position-name {
  flex: 1;
  flex-wrap: nowrap; /* 保持文本不换行 */
  width: auto; /* 根据内容自动调整宽度 */
}
.page-section {
  width: 100%;
  padding: 0;
  position: relative; 
  
}

.page-section-spacing {
  margin-bottom: 20px;
}

.swiper {
  border-radius: 20px;
  margin:0 auto;
  margin-top: 20px;
  margin-bottom: 20px;
  width: 95%;
  height: 150px;
  text-align: center;
  box-shadow: 0 0 3px 4px rgba(0, 0, 0, 0.2);
}

.swiper-item {
  border-radius: 20px;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.leftArrow, .rightArrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 60px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 15px;
  color: #fff;
  text-align: center;
  font-size: 20px;
  cursor: pointer;
}

.leftArrow {
  left: 5px;
}

.rightArrow {
  right: 5px;
}

.user-info {
  margin-top: 10px;
  padding: 0 0;
  display: flex;
  justify-content: flex-end;
  margin-left: 20px;
  margin-bottom: 0px;
}

.user-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
  cursor: pointer;
}

