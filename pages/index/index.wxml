<view class="page">
<scroll-view scroll-y="true">
  <view class="container">
    <view class="first_container">
      <view class="index-position">
        <image src="../../static/position.png" class="image-type" />
        <text class="position-name">{{namePosition}}</text>
      </view>

      <view class="search-container">
        <view class="search-window">
          <image class="icon" src="../../static/search.png" />
          <navigator url="/pages/search/search" class="search-link">输入搜索内容</navigator>
        </view>
      </view>

      <view class="dropdown-container">
        <image src="../../static/plus.png" bindtap="toggleDropdown" class="dropdown-img"/>
        <view wx:if="{{dropdownVisible}}" class="dropdown-menu">
          <block wx:for="{{options}}" wx:key="value">
            <view class="dropdown-item" bindtap="onOptionSelect" data-value="{{item.value}}">
              {{item.label}}
            </view>
          </block>
        </view>
      </view>
    </view>

    <view class="page-section page-section-spacing swiper">
      <swiper id="mySwiper" indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"
        current="{{current}}">
        <block wx:for="{{background}}" wx:for-item="item" wx:for-index="index" wx:key="index">
          <swiper-item>
            <image class="swiper-item" src="{{item}}" mode="aspectFill"></image>
          </swiper-item>
        </block>
      </swiper>
      <view bindtap="prevImage" class="leftArrow">{{Arrow1}}</view>
      <view bindtap="nextImage" class="rightArrow">{{Arrow2}}</view>
    </view>

    <view class="container_icon">
  <view class="selected">
    <navigator class="index_selected" url="/pages/hotel/hotel">
      <image src="../../static/hotel.png" class="icon_function" mode=""/>
      <text class="icon-title">酒店</text>
    </navigator>
    <navigator class="index_selected" url="/pages/Trip/trip">
      <image src="../../static/trip.png" class="icon_function" mode=""/>
      <text class="icon-title">旅游</text>
    </navigator>
    <navigator class="index_selected" url="/pages/food/food">
      <image src="../../static/food.png" class="icon_function" mode=""/>
      <text class="icon-title">美食</text>
    </navigator>
  </view>
</view>



    <view class="fontSuggestion"> 
      <text>为您推荐</text>
    </view>
    <view class="contentSuggestion">
  <view class="box-suggestion">
    <view class="first" wx:for="{{items}}" wx:key="id">
      <navigator url="../../pages/contentpage/contentpage">
        <image class="image1" src="{{item.itemImage}}" mode="aspectFill" />
        <text class="intro">{{item.intro}}</text>
      </navigator>
      <view class="item">
          <image src="../../static/test.png" class="item-image" mode="aspectFill"></image>
          <text class="item-text">{{item.text}}</text>
          <image src="{{item.loveImage}}" class="item-love" mode="aspectFill" bindtap="like_post" data-index="{{index}}"></image>
        </view>
    </view>
  </view>
</view>
  </view>
</scroll-view>
</view>
