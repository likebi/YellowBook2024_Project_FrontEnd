.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  height: 100vh;
}

.slogan{
  margin-top: 30px;
  text-align: center;
  font-weight: 700;
  align-items: center;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.page-section {
  width: 100%;
  padding: 0;
  position: relative; 
  
}

.page-section-spacing {
  margin-bottom: 20px;
}

.swiper {
  border-radius: 20px;
  margin:0 auto;
  margin-top: 20px;
  margin-bottom: 20px;
  width: 95%;
  height: 150px;
  text-align: center;
  box-shadow: 0 0 4px 6px rgba(0, 0, 0, 0.4);
}

.swiper-item {
  border-radius: 20px;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.leftArrow, .rightArrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 60px;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  font-size: 20px;
  cursor: pointer;
}

.leftArrow {
  left: 5px;
}

.rightArrow {
  right: 5px;
}

.user-info {
  margin-top: 10px;
  padding: 0 0;
  display: flex;
  justify-content: flex-end;
  margin-left: 20px;
  margin-bottom: 0px;
}

.user-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
  cursor: pointer;
}

button{
    border: none;
    background: none;
    padding: 0;
  }

.button-user{ 
  outline: none;
   border: none;
   padding: 0 0;
}
.user-name-input {
  font-size: 16px;
  color: #333;
  padding: 0;
  width: 100rpx;
}

