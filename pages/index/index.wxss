.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  height: 100vh;
}

.slogan{
  margin-top: 30px;
  text-align: center;
  font-weight: 700;
  align-items: center;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.page-section {
  width: 100%;
  padding: 0;
  position: relative; 
  
}

.page-section-spacing {
  margin-bottom: 20px;
}

.swiper {
  border-radius: 20px;
  margin:0 auto;
  margin-top: 20px;
  margin-bottom: 20px;
  width: 95%;
  height: 150px;
  text-align: center;
  box-shadow: 0 0 4px 6px rgba(0, 0, 0, 0.4);
}

.swiper-item {
  border-radius: 20px;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.leftArrow, .rightArrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 60px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 15px;
  color: #fff;
  text-align: center;
  font-size: 20px;
  cursor: pointer;
}

.leftArrow {
  left: 5px;
}

.rightArrow {
  right: 5px;
}

.user-info {
  margin-top: 10px;
  padding: 0 0;
  display: flex;
  justify-content: flex-end;
  margin-left: 20px;
  margin-bottom: 0px;
}

.user-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
  cursor: pointer;
}

button{
    border: none;
    background: none;
    padding: 0;
  }

.button-user{ 
  outline: none;
   border: none;
   padding: 0 0;
}
.user-name-input {
  font-size: 16px;
  color: #333;
  padding: 0;
  width: 100rpx;
}

.avatar1 .button-user{
  width: 50px;
  height: 60px;
  border: none;
  background: none;
  padding: 0;
}

.selected {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
  width: 96%;
}

.index_selected{
  display: inline-block;
  width: 70px;
  height: 70px;
  border-radius: 70px;
  background-color: #333;
}

.fontSuggestion{
  text-align: center;
  margin: 20px auto;
  font-weight: 700;
  color: #333;
  font-size: 19px;
}

.first {
  display: flex;
  flex-direction: column;
  width: 45%;
  background-color: white;
  border-radius: 10px;
  margin-bottom: 15px;
  height: auto;
  background-color: #fff;
}

button-sug{
  display: inline-block;
}

.box-suggestion {
  display: flex; /* 使用flex布局 */
  flex-wrap: wrap; /* 允许换行 */
  justify-content: space-around; /* 在主轴上平均分配空间 */
}
.image1 {
  width: 100%;
  border-radius: 10px;
}

.intro {
  overflow: hidden; /* 超出内容隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  display: -webkit-box; /* 使用 Flexbox 进行布局 */
  -webkit-line-clamp: 2; /* 限制显示两行 */
  -webkit-box-orient: vertical; /* 垂直排列 */
  margin: 10px 20rpx;
  font-size: 20rpx;
}

.item {
  display: flex;
  align-items: center;
}

.item-image {
  width: 25px; /* 设置图片的宽度 */
  height: 25px; /* 设置图片的高度 */
  border-radius: 40rpx;
  margin-right: 10px; /* 图片与文字之间的间距 */
  margin-left: 20rpx;
}

.item-love{
  width: 20px; /* 设置图片的宽度 */
  height: 20px; /* 设置图片的高度 */
  border-radius: 40rpx;
  margin-right: 10px; /* 图片与文字之间的间距 */
  margin-left: 60rpx;
}

.item-text {
  font-size: 10px; /* 设置文字的大小 */
  color: #333; /* 设置文字的颜色 */
}
