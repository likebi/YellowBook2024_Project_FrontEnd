<view class="background" style="background-image: url('{{backgroundImage}}'); "></view>
<view class="me-info">
  <button open-type="chooseImage" bindtap="onChooseBackground" class="change-bg-button">更换背景</button>  
  <view class="avatar1">
    <button open-type="chooseImage" bindtap="onChooseAvatar" class="button-user">
      <image class="user-image" src="{{userImage}}" mode="aspectFill"></image>
    </button>
  
  </view>
  <view class="user-info">
    <input type="nickname" value="{{nickname}}" class="user-name-input" bind:change="onChooseNickname" />
    <text class="id_user">{{acc_id}}</text>
  </view>

  <view class="editProfil">
  <navigator url=""  open-type="navigate">
      <view >
        CLICK HERE TO EDIT PROFILE
    </view>
    </navigator>
  </view>

  <view class="profile-stats">
  <navigator url="/pages/follow/follow" class="stat-item">
    <text class="number">{{follow_num}}</text>
    <text class="label">关注</text>
  </navigator>
  <navigator url="/pages/fans/fans" class="stat-item">
    <text class="number">{{fans_num}}</text>
    <text class="label">粉丝</text>
  </navigator>
  <navigator url="/pages/likes/likes" class="stat-item">
    <text class="number">{{like_num}}</text>
    <text class="label">点赞</text>
  </navigator>
</view>
</view>
<view class="container">
  <!-- 顶部标签栏 -->
  <view class="reds-sticky">
    <view class="reds-tabs-list">
      <view
        class="reds-tab-item sub-tab-list {{currentTab == 0 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="0"
      >
        <span class="content_title">笔记</span>
      </view>
      <view
        class="reds-tab-item sub-tab-list {{currentTab == 1 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="1"
      >
        <span class="content_title">收藏</span>
      </view>
      <view
        class="reds-tab-item sub-tab-list {{currentTab == 2 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="2"
      >
        <span class="content_title">点赞</span>
      </view>
      <view class="active-tag" style="width: {{activeTagWidth}}px; left: {{activeTagLeft}}px;"></view>
    </view>
  </view>

  <!-- 滑动窗口 -->
  <swiper
    current="{{currentTab}}"
    duration="300"
    bindchange="swiperChange"
    class="swiper-container"
  >
    <swiper-item>
      <view class="content">这里是笔记的内容</view>
    </swiper-item>
    <swiper-item>
      <view class="content">这里是收藏的内容</view>
    </swiper-item>
    <swiper-item>
      <view class="content">这里是点赞的内容</view>
    </swiper-item>
  </swiper>
</view>
