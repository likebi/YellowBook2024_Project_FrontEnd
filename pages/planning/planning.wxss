/* pages/planning/planning.wxss */
.post-page {
  width: 100vw;
}
.post-page-header {
  display: flex;
  width: 100%;
  margin-bottom: 10px;
}
.image_back{
  justify-content: flex-start;
  padding-left: 10px;
  padding-top: 23px;
  font-size: 35px;
  height: 20px;
  line-height: 20px;
  text-align: center;
}
.post-image {
  width: 30px;
  height: 30px;
  border: solid 1px black;
  border-radius: 50%;
  margin: 13px;
  justify-content: center;
  align-items: center;
  padding: 3%;
  overflow: hidden;
}
.post-image .post-image-size {
  width: 100%; /* Changed from percentage to fixed size */
  height: 100%; /* Changed from percentage to fixed size */
  object-fit: cover;
  border-radius: 50%;
}

.post-username-box {
  margin-left: 10px;
  width: auto;
  height: auto;
  display: flex;
  flex-direction: column;
}
.post-user {
  font-size: 25px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin-top: 10px;
}
.follow-button {
  width: 20%;
  margin: 20px;
  margin-left: 9%;
}
.follow-button-set {
  justify-content: flex-end;
  text-align: center;
}

.history{
  margin: 30rpx 30rpx;
  width: 100%;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 20rpx;
  background-color: royalblue;
  color: aqua;
  font-size: 35rpx;
}

.type-bar{
  position: fixed;
  bottom: 30rpx;
  height: 80rpx;
  left: 30rpx;
  width: 100%;
  flex-wrap: nowrap;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%; /* 确保图片占据整个父容器的宽度 */
  height: 100%; /* 确保图片占据整个父容器的高度 */
}

.input-bar{
  width: 80%;
}

.type{
  background-color: white;
  height: 80rpx;
  width: 520rpx;
  border-radius: 25rpx;
  padding-left: 20rpx;
  border: 1px solid rgb(30,144,255);
}
.input-section {
  /* ini biar submit button ada di samping write comment */
  display: flex;
}
.comment-button {
  /* comment button submit */
  padding: 10px;
  background-color: #007aff;
  color: #ffffff;
  border: none;
  border-radius: 5px;
}

.like-section {
  display: flex;
  align-items: center;
  margin-top: 5px;
  cursor: pointer;
  /* background-color: crimson; */
  
}
.save-section {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box; /* 确保内边距和边框在宽度内 */
  background: none;
}

.send{
  position: relative;
  left: 5rpx;
  width: 100%; 
  height: 100%;
}

.attach{
    position: relative;
    right: 26rpx;
    width: 100%; 
    height: 100%;
}
