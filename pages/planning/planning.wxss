/* pages/planning/planning.wxss */
#container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.title-bar {
  width: 100%;
  margin: 15rpx auto;
  text-align: center;
}

.title {
  width: 100%;
  text-align: center;
}

.history{
  margin: 30rpx 30rpx;
  width: 100%;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 20rpx;
  background-color: royalblue;
  color: aqua;
  font-size: 35rpx;
}

.type-bar{
  position: fixed;
  bottom: 30rpx;
  height: 80rpx;
  left: 30rpx;
  width: 100%;
  flex-wrap: nowrap;
  display: flex;
  align-items: center; 
}

.input-bar{
  width: 80%;
}

.type{
  background-color: white;
  height: 80rpx;
  width: 520rpx;
  border-radius: 25rpx;
  padding-left: 20rpx;
  border: 1px solid rgb(30,144,255);
}

.send-btn, .attach-btn {
  width: 50rpx; 
  height: 60rpx; 
  padding: 0; 
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box; /* 确保内边距和边框在宽度内 */
  background: none;
}

.send{
  position: relative;
  left: 5rpx;
  width: 100%; 
  height: 100%;
}

.attach{
    position: relative;
    right: 26rpx;
    width: 100%; 
    height: 100%;
}
